# - Try to find Zsdatable
# Once done, this will define
#
#  Zsdatable_FOUND - system has Zsdatable
#  Zsdatable_INCLUDE_DIRS - the Zsdatable include directories
#  Zsdatable_LIBRARIES - link these to use Zsdatable

include(CMakeFindDependencyMacro)
find_dependency(ZLIB)

find_path(Zsdatable_INCLUDE_DIR
  NAMES zsdatable.hpp
  PATHS @INSTALL_INCLUDE_DIR@
)

find_library(Zsdatable_LIBRARY
  NAMES zsdatable
  PATHS @INSTALL_LIB_DIR@
)

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(Zsdatable DEFAULT_MSG
                                  Zsdatable_LIBRARY ZLIB_LIBRARIES Zsdatable_INCLUDE_DIR)

mark_as_advanced(Zsdatable_INCLUDE_DIR Zsdatable_LIBRARY)

set(Zsdatable_INCLUDE_DIRS ${Zsdatable_INCLUDE_DIR})
set(Zsdatable_LIBRARIES ${Zsdatable_LIBRARY} ${ZLIB_LIBRARIES})
